#include <iostream>
using namespace std;

void factorial(int n) {
    int resultado[5000];
    resultado[0] = 1;
    int tam = 1;

    for (int x = 2; x <= n; x++) {
        int carry = 0;
        for (int i = 0; i < tam; i++) {
            int prod = resultado[i] * x + carry;
            resultado[i] = prod % 10;
            carry = prod / 10;
        }
        while (carry) {
            resultado[tam++] = carry % 10;
            carry /= 10;
        }
    }
    cout << "Factorial de " << n << " es: ";
    for (int i = tam - 1; i >= 0; i--) cout << resultado[i];
}

int main() {
    int n;
    cout << "Numero: ";
    cin >> n;
    factorial(n);
}
