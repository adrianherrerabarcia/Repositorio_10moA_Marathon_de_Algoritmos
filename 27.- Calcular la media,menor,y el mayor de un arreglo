#include <iostream>
using namespace std;

int main(){
    int n;
    cout<<"Cantidad: ";
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++) cin>>a[i];
    int min=a[0], max=a[0], suma=0;
    for(int i=0;i<n;i++){
        if(a[i]<min) min=a[i];
        if(a[i]>max) max=a[i];
        suma+=a[i];
    }
    cout<<"Media: "<<(float)suma/n<<"\nMinimo: "<<min<<"\nMaximo: "<<max;
}
