#include <iostream>
#include <string>
using namespace std;

int main() {
    string texto;
    cout << "Texto: ";
    getline(cin, texto);
    for (char &c : texto)
        if (tolower(c)=='a'||tolower(c)=='e'||tolower(c)=='i'||tolower(c)=='o'||tolower(c)=='u')
            c='*';
    cout << "Texto modificado: " << texto;
}
