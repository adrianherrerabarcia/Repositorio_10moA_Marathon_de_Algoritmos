#include <iostream>
using namespace std;

int main() {
    int n, m;
    cout << "Filas y columnas: ";
    cin >> n >> m;

    int **A = new int*[n], **B = new int*[n], **C = new int*[n];
    for (int i = 0; i < n; i++) {
        A[i] = new int[m];
        B[i] = new int[m];
        C[i] = new int[m];
    }

    cout << "Ingrese matriz A:\n";
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++) cin >> A[i][j];

    cout << "Ingrese matriz B:\n";
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++) cin >> B[i][j];

    cout << "Suma:\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            C[i][j] = A[i][j] + B[i][j];
            cout << C[i][j] << " ";
        }
        cout << endl;
    }

    for (int i = 0; i < n; i++) {
        delete[] A[i]; delete[] B[i]; delete[] C[i];
    }
    delete[] A; delete[] B; delete[] C;
}
