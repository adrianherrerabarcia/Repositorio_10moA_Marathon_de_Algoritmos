#include <iostream>
#include <cstring>
using namespace std;

bool esPalindromo(char *cadena) {
    char *inicio = cadena;
    char *fin = cadena + strlen(cadena) - 1;
    while (inicio < fin) {
        if (*inicio != *fin) return false;
        inicio++; fin--;
    }
    return true;
}

int main() {
    char palabra[100];
    cout << "Ingrese una palabra: ";
    cin >> palabra;
    if (esPalindromo(palabra)) cout << "Es palindromo";
    else cout << "No es palindromo";
}
